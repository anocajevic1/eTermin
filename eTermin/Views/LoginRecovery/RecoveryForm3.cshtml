<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>recoveryForma1</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/Login-Form-Dark.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
</head>

<body>
    <div class="login-dark">
        @using (Html.BeginForm("ResetPassword", "LoginRecovery")) {
            <form method="post">
                <h2 class="sr-only">Login Form</h2><img class="img-fluid" src="~/img/mhsc-logo.png"><small class="form-text text-muted">Please enter your new password.</small>
                <div id="etNewPassword" class="illustration">
                    <input class="form-control" type="password" name="etPassword" placeholder="New password">
                </div>
                <input class="form-control" type="password" name="etPasswordConfirm" placeholder="Confirm password">
                <div class="btn-group" role="group"></div>
                <div class="btn-group" role="group"></div>
                <div class="form-group"><button class="btn btn-primary btn-block" id="btnReset" type="submit" style="background: #40A15D;">Reset</button></div>
            </form>
        }
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>

</html>